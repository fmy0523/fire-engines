<div class="container">
  <h2>プロフィール編集</h2>
  <div class="row">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group has-icon">
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
      </div>
      <div class="form-group has-icon">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>

      <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
  </div>
</div>