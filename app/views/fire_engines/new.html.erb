<div class="container">
  <h2>New post</h2>
  <%= form_for(@fire_engine, url: fire_engines_path) do |f| %>
    <% if @fire_engine.errors.any? %>
      <div id="error_explanation">
        <h2><%= @fire_engine.errors.count %>件のエラーが発生しました。</h2>
        <ul>
          <% @fire_engine.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <%= f.attachment_field :image %>
    </div>
    <br>
      <div class="row">
        <div class="form-group has-icon">
          <label class="control-label sr-only">消防車名</label>
            <%= f.text_field :fireengine_name, class:"form-control", placeholder:"消防車名" %>
          <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
        </div>
      </div>
      <div class="row">
        <label class="control-label sr-only">説明</label>
        <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"説明" %>
      </div>
    <%= f.submit "投稿する", class: "btn btn-lg btn-base-1 mt-20 pull-left" %>
  <% end %>
</div>