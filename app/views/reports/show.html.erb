<div class="container">
  <p>通報詳細</p>
  <div class="row">
    <div class="col-lg-12">
      <div>
        <ul>
          <li>
          	<!-- 通報日時 -->
            <%= @report.created_at.strftime('%Y/%m/%d') %>
          </li>
          <li>
          	<!-- 違反者ID -->
            <%= @report.user_id %>
          </li>
          <li>
            <!-- 違反者名と違反者ページへのリンク-->
            <%= @report.user.name %>
          </li>
          <li>
            <!-- 通報された投稿のタイトルと詳細ページへのリンク -->
            <%= @report.fire_engine.fireengine_name %>
          </li>
        </ul>

        <div>
          <!-- 表題 -->
          <h4><%= @report.title %></h4>
        </div>
              <!-- 通報内容詳細 -->
              <p><%= @report.caption %></p>

      </div>
    </div>
  </div>
</div>